---
// src/components/CustomHero.astro
import DefaultHero from "@astrojs/starlight/components/Hero.astro";
---

<div
  class="relative w-full overflow-hidden min-h-[60vh] flex items-center py-16"
>
  <div class="relative z-10 w-full">
    <DefaultHero {...Astro.props}>
      <slot />
    </DefaultHero>
  </div>
</div>

<style is:global>
  @reference "tailwindcss";

  .relative img {
    @apply rounded-2xl shadow-2xl border border-white/10 bg-white/5 transition-transform duration-500;
  }

  .relative img:hover {
    @apply -translate-y-2 rotate-1;
  }

  .hero {
    @apply grid lg:grid-cols-2 gap-8 items-center;
  }
</style>
